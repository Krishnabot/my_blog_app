<div class='post'>
  <div class='post-header'>
    <h3><%= @post.title %> by <%= @user.name %></h3>
    <h5>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></h5>
  </div>
  <h3><%= @post.text %></h3>
</div>
<% if @post.comments_counter? %>
  <div class='post-comments'>
    <% @comments = Comment.where(post_id: @post.id) %>
    <% @comments.each do |comment| %>
      <% @users = User.where(id: comment.user_id) %>
      <% @users.each do |user| %>
        <h4><%= user.name %>: <%= comment.text %></h4>
        <% if can? :destroy, comment %>
          <%= button_to ‘Delete comment’, user_post_path, method: :delete %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class='post-comments'>No comments Available</div>
<% end %>
<%= form_with model: Like, url: user_post_likes_path(@user, @post) do |f| %>
  <%= f.submit "Add like!" %>
<% end %>
<% if can? :destroy, @post %>
  <%= button_to 'Delete Post', user_post_path, method: :delete %>
<% end %>
